{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug in Expo",
        "type": "reactnative",
        "request": "launch",
        "platform": "exponent",
        "cwd": "${workspaceFolder}",
        "expoHostType": "lan"
      },
      {
        "name": "Attach to Expo",
        "type": "reactnative",
        "request": "attach",
        "cwd": "${workspaceFolder}",
        "port": 8082,
        "sourceMaps": true
      },
      {
        "name": "Debug Android",
        "type": "reactnative",
        "request": "launch",
        "platform": "android",
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Debug iOS",
        "type": "reactnative",
        "request": "launch",
        "platform": "ios",
        "cwd": "${workspaceFolder}"
      }
    ]
  }
